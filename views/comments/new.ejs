<% include ../partials/header_small %>

    <!-- Wrapper -->
    <section id="four" class="wrapper alt style1">
        <div class="inner">

            <h1 class="align-center">ADD NEW COMMENT TO <%= camp.name %></h1>

            <form class="centered" method="post" action="/campgrounds/<%= camp._id%>/comments">
                <div class="fields">
                    <div class="field">
                            <blockquote>
                            <p><span class="user"><%= currentUser.username %></span> says: </p>
                            </blockquote>
                        <label for="email">Comment</label>
                        <input type="text" name="comment[text]" id="text" />
                    </div>
                </div>
                <ul class="actions">
                    <li><input type="submit" value="Send Comment" /></li>
                </ul>
            </form>

        </div>
    </section>
<% include ../partials/footer %>
